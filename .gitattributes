# Auto detect text files and perform LF normalization
* text=auto

# text
*.c text
*.cpp text
*.h text
*.hpp text
*.pl text
*.cc text
*.m text
*.mm text
*.txt text
*.mak text

# binary
*.exe binary
*.dll binary
*.ico binary
*.bin binary
*.wav binary
*.snd binary
*.dat binary

# resources
*.rc text eol=crlf
*.sln text eol=crlf filter=utf8bom
*.vcproj text eol=crlf filter=utf8bom
*.vcxproj text eol=crlf filter=utf8bom
*.vcxproj.filters text eol=crlf filter=utf8bom
*.dsw text eol=crlf
*.dsp text eol=crlf
*.bat text eol=crlf

# bbc
*.rom binary
*.ssd binary
*.dsd binary
*.adl binary
*.uef binary
*.img binary
*.hdf binary
